<div class="container-lg text-center">
    <h1>All US National Parks</h1>

</div>

<div>
    <% parks.forEach(park => { %>
            <% if(park.designation === 'National Park') { %>
                <div class="container-md text-center">
                    <h2>
                        <%= park.fullName %>
                    </h2>
                    <img src="<%= park.images[0].url %>" width="400px" >
                    <h4>
                        Park Description
                    </h4>
                    <p>
                        <%= park.description %>
                    </p>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <form method="GET" action="/parks/<%= park.parkCode %>">
                            <button type="button" class="btn btn-success">View</button>
                        </form>
                        <form method="POST" action="/parks/<%= park.parkCode %>/favorite">
                            <input id="favorite" name="parkCode" value="<%= park.parkCode %>" hidden>
                            <input id="favorite" name="fullName" value="<%= park.fullName %>" hidden>
                            <button type="button" class="btn btn-success">Favorite</button>
                        </form>
                        <form method="GET" action="/experiences/new/<%= park.parkCode %>/<%= park.fullName %>">
                            <button type="button" class="btn btn-success">Add Experience</button>
                        </form>
                    </div>
                </div>
            <% } %>
<% }) %>
</div> 